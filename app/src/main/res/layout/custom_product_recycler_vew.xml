<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/_8sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageViewProduct"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:srcCompat="@drawable/list_product" />

        <LinearLayout
            android:layout_marginStart="@dimen/_10sdp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/productNameText"
                android:text="Product Name"
                android:textSize="@dimen/_18sdp"
                android:textColor="@color/primary_dark_green"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/productDescriptionText"
                android:text="description for this product. description for this product."
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/productPriceText"
                android:text="Rs 2000.00"
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/_16sdp"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:padding="@dimen/_2sdp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_25sdp"/>

        </LinearLayout>
    </LinearLayout>



</LinearLayout>