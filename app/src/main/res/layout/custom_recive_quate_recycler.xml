<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="start"
    android:layout_margin="@dimen/_8sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="@drawable/custom_reciver_message_background"
        android:padding="@dimen/_7sdp"
        android:paddingStart="@dimen/_12sdp"
        android:paddingEnd="@dimen/_12sdp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/productImageView"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:src="@drawable/ic_baseline_crop_original_24" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/productNameTextView"
                    android:layout_width="142dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5sp"
                    android:maxLines="3"
                    android:text="Product Name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp" />
                <TextView
                    android:id="@+id/productPriceTextView"
                    android:layout_width="142dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5sp"
                    android:maxLines="3"
                    android:text="Rs 1200.00"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp" />
            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/productDescriptionTextView"
            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry."
            android:textColor="@color/black"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_width="@dimen/_170sdp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/incompletePaymentText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:text="Payment Incomplete"
            android:textAlignment="center"
            android:textColor="@color/red"
            android:visibility="gone" />

        <TextView
            android:id="@+id/paymentSuccessText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:text="Payment Success"
            android:textAlignment="center"
            android:textColor="@color/green"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cardPayBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Card Pay"
                android:visibility="visible" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bankTransferBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bank Transfer"
                android:visibility="visible" />

        </LinearLayout>

    </LinearLayout>



</LinearLayout>