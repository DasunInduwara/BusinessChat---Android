<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/_8sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userImage"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:src="@drawable/businessman"
                app:civ_border_width="@dimen/_1sdp"
                app:civ_border_color="@color/primary_dark_green"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"/>


            <LinearLayout
                android:orientation="vertical"
                android:gravity="start"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_width="@dimen/_180sdp"
                android:layout_height="@dimen/_30sdp">
                <TextView
                    android:id="@+id/userName"
                    android:text="Abdul Mughni"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/lastMessage"
                    android:text="Hello Faza"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:textColor="@color/primary_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:gravity="end"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_marginEnd="@dimen/_4sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp">
                <TextView
                    android:id="@+id/messageTime"
                    android:text="12.23 PM"
                    android:textSize="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:textAlignment="textEnd"
                    android:textColor="@color/primary_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/unseenMessageCount"
                    android:text="2"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:padding="@dimen/_2sdp"
                    android:textSize="@dimen/_8sdp"
                    android:background="@drawable/custom_unseen_message_count_background"
                    android:textColor="@color/white"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"/>

            </LinearLayout>



        </LinearLayout>
</LinearLayout>